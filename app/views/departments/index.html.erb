<h2><%= t("departments.title") %></h2>

<% if @company.child_companies.blank? %>
  <h4><%= t("departments.no_departments") %></h4>
<% else %>
  <div id="departments-wrapper">
    <% @company.child_companies.each do |dept| %>
      <%= render "department", department: dept %>
    <% end %>
  </div>
<% end %>