<%
  unless defined?(numbers)
    numbers = Array(number)
  end 

  unless defined?(css_class)
    css_class = ""
  end

  label_title = defined?(label_title) && label_title.present? ? label_title : nil
%>
<div class="flipboard <%= 'pointer' if numbers.length > 1%> <%= css_class %>">
  <div>
    <dl>
      <dd>
          <% numbers.each do |number| %>
            <div class="number"><%= number.to_s.split("").collect{|i| "<span>#{i}</span>"}.join.html_safe %></div>        
          <% end %>
        <div class="flipboard-hr"></div>
      </dd>
      <dt title="<%= label_title %>" >
        <%= label %>
      </dt>
    </dl>
  </div>
  <% if block_given?%>
    <div><%= yield %></div>
  <% end%>
</div>