<%= render :partial => "layouts/mailer/header"%>

<table style="<%= mail_styles(:table, :mail_border) %> border-top: none; border-bottom: none;">
  <tr>
    <td>
      <%= render partial: "user_notifier/recognition", locals: {
          sender: @sender,
          badge: @badge,
          recognition: @recognition,
        }
      %>
    </td>
  </tr>
</table>

<div style="padding: 0 3%; margin: 30px 0;">
  <%= yield %>
</div>


<%= render :partial => "layouts/mailer/footer"%>