<div class="upgrade-banner">
  <div class="row-fluid">
    <div class="span5">
      <div class="flex-centered">
        <div class="content" data-turbolinks="false">
          <h3 class="balance-text"><%= t("layouts.upgrade_banner.title") %></h3>
          <%= viewer_link_to t("layouts.upgrade_banner.main_action"), welcome_path(upgrade: true), iframe_viewer?, class: "button button-highlight" %>
          <%= viewer_link_to t("dict.contact"), contact_sales_path, iframe_viewer?, class: "button" %>
        </div>
      </div>
    </div>
    <div class="span7 tour-content">
      <div class="content">
        <% if content_for?(:tour_content) %>
          <%= yield :tour_content %>
          <%= render partial: "layouts/youtube_load" %>
      <% else %>
          <style>
            .tour-content .value-props li:nth-child(<%= rand(1..4) %>) {
              display: block;
            }
          </style>
          <%= render partial: "welcome/value_props" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
