<% content_for :title, @title %>

<% content_for :meta_properties do %>
  <meta property="og:title" content="<%= @title %> | Recognize" />
  <meta property="og:type" content="article" />
  <meta property="og:site_name" content="Recognize" />
  <meta property="og:image" content="/assets/pages/articles/cultivate-positive-remote-work-experience/image1.jpg" />
