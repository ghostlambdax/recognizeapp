<table style="<%= mail_styles(:table) %>">
  <tr>
    <td>
      <h2 style="<%= mail_styles(:text, :h2) %>  padding-top:10px; margin-top: 0; margin-bottom: 10px;"><%= @comment.content.truncate(150) %></h2>
      <p style="<%= mail_styles(:text, :p) %> margin-bottom: 25px;">  <%= @comment.commenter.full_name %></p>
    </td>
  </tr>
  <tr>
    <td><%= mail_styles(:hr) %></td>
  </tr>
</table>

<table style="<%= mail_styles(:table, :body_bg) %> margin: 20px 0;">
  <tr>
    <td>
      <a style="<%= mail_styles(:text, :button) %>" href="<%= recognition_url(@comment.commentable) %>"><%= t('user_notifier.view_the_conversation') %></a>
    </td>
  </tr>
</table>


