<table style="<%= mail_styles(:table, :body_bg) %> margin: 20px 0;">
  <tr>
    <td width="120px" style="text-align: center; vertical-align: top;">
      <%= image_tag badge.permalink(200, "http:"), style: "height: 75px; width: 75px;" %>
      <h3 style="<%= mail_styles(:text, :h3) %> margin-top: 10px; font-weight: 600; margin-bottom: 8px;"><%= badge.short_name %></h3>
    </td>

    <td>
      <h3 style="<%= mail_styles(:text, :h3) %>">
      <% recognition.recipients.each do |r| %>
        <%= r.full_name %>&nbsp;&nbsp;
      <% end %>
      </h3>

      <% if recognition.message.present? %>
          <div style="<%= mail_styles(:h3, :text) %> margin-top: 0;"><%= recognition_message_for_mail(recognition) %> <span style="<%= mail_styles(:textSubtle) %>"></span></div>
          <p style="<%= mail_styles(:p, :text) %>">
            <% if recognition.is_cross_company? %>
              <%= t("user_notifier.sender_from_company", sender: recognition.sender_name, company: sender&.company&.name) %>
            <% else %>
              <%= t("user_notifier.from_sender", sender: recognition.sender_name) %>
            <% end %>
          </p>
      <% end %>
    </td>

  </tr>
</table>
