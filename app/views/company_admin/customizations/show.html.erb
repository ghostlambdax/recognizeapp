<h1><%= t('dict.customizations') %></h1>
<hr>
<h2>Website Styles</h2>
<div class="row-fluid">
  <div class="span6">
    <h3>
      <%= _("Top toolbar logo") %>
    </h3>
    <%= form_for @customizations, url: company_admin_customizations_path, method: :put, remote: true, html:
      {class: "color-picker-form" , id: "company-customizations-primary-logo-form" } do |f| %>
      <div class="row-fluid">
        <div class="span4">
          <%= attachment_uploader f, :primary_header_logo, label: _("A white transparent png image to go in the top
            toolbar. Many companies choose to make it the name of their program.") , thumb_size: :large_thumb %>
        </div>
      </div>
      <div class="row-fluid""">
        <%= f.submit "Save" , class: "button button-primary marginTop10" %>
      </div>
      <% end %>

  </div>
  <div class="span6">
    <h3>
      <%= _("Stream page logo") %>
    </h3>
    <%= form_for @customizations, url: company_admin_customizations_path, method: :put, remote: true, html:
      {class: "color-picker-form" , id: "company-customizations-secondary-logo-form" } do |f| %>
      <div class="row-fluid">
        <div class="span4">
          <%= attachment_uploader f, :secondary_header_logo, label: _("A color logo that goes on the Stream page. Many
            companies choose to have it be their company logo. The background has to be white.") , thumb_size:
            :large_thumb %>
        </div>
      </div>
      <div class="row-fluid""">
        <%= f.submit "Save" , class: "button button-primary marginTop10" %>
      </div>
      <% end %>
  </div>

</div>

<div class="row-fluid">
  <div class="span12">
    <h3>Recognition certificate</h3>
    <p>When an individual receives a recognition, the users have a choice to print off an award certificate. This is the
      background for the certificates.</p>

    <%= form_for @customizations, url: company_admin_customizations_path, method: :put, remote: true, multipart: true,
      authenticity_token: true, html: {id: "certificate-picker-form" } do |f| %>

      <%= attachment_uploader f, :certificate_background, thumb_size: :large_thumb %>

        <br>
        <%= f.submit "Save" , class: "button button-primary marginTop10" %>

          <% end %>
  </div>
</div>

<h3>End user instructions</h3>

<div class="row-fluid">
  <div class="span6">
    <%= form_for @customizations, url: company_admin_customizations_path, method: :put, remote: true, html:
      {id: "youtube-customizations-form" } do |f| %>
      <%= f.label :youtube_id, "Youtube ID for instruction video" %>
        <%= f.text_field :youtube_id, placeholder: "l9k_CSBHPNY" %>
          <%= f.submit "Save" , class: "button button-primary marginTop10" %>
            <% end %>
  </div>
  <div class="span6">
    <%= form_for @customizations, url: company_admin_customizations_path, method: :put, remote: true, multipart: true,
      authenticity_token: true, html: {id: "end-user-guide-picker-form" } do |f| %>

      <%= attachment_uploader f, :end_user_guide, label: "End user guide" , thumb_size: :link %>

        <%= f.submit "Save" , class: "button button-primary marginTop10" %>

          <% end %>
  </div>
</div>
<hr>

<h2>Email Styles</h2>
<div class="row-fluid">
  <div class="span7">
    <p>All colors should be hexadecimal or use the color picker.</p>
    <%= form_for @customizations, url: company_admin_customizations_path, method: :put, remote: true, html:
      {class: "color-picker-form" , id: "email-customizations-form" } do |f| %>
      <div class="row-fluid">
        <div class="span6">
          <%= f.label :primary_bg_color %>
            <%= f.text_field :primary_bg_color, type: :color %>

              <%= f.label :secondary_bg_color %>
                <%= f.text_field :secondary_bg_color, type: :color %>

                  <%= f.label :primary_text_color %>
                    <%= f.text_field :primary_text_color, type: :color %>

                      <%= f.label :font_family %>
                        <%= f.text_field :font_family, class: "width-100" ,
                          placeholder: "Lato, San Francisco, Helvetica, Arial, sans-serif" %>

        </div>
        <div class="span6">
          <%= f.label :secondary_text_color %>
            <%= f.text_field :secondary_text_color, type: :color %>

              <%= f.label "Action button background" %>
                <%= f.text_field :action_color, type: :color %>

                  <%= f.label :action_text_color %>
                    <%= f.text_field :action_text_color, type: :color %>

        </div>
        <div class="span6">
          <%= attachment_uploader f, :email_header_logo, label: "Header logo in email" , thumb_size: :large_thumb %>
        </div>
      </div>

      <%= f.submit "Save" , class: "button button-primary marginTop10" %>
        <%= link_to "Reset to defaults" , "javascript://" , id: "colorPickerReset" , data: {defaults:
          CompanyCustomization.defaults.to_json} %>
          <% end %>

  </div>
  <div class="span5">
    <h4>Preview email theme</h4>
    <div id="email">
      <div id="email-toolbar">
        <h3 style="margin: 0;">Hi there</h3>
        <div>
          <%= image_tag "chrome/logo.png" , id: "email-logo" %>
        </div>
      </div>
      <div id="email-body">
        <p>Some text here for your email using secondary color</p>

        <a href="javascript://" class="button button-large">A button with your action color</a>
      </div>
    </div>
  </div>
</div>

