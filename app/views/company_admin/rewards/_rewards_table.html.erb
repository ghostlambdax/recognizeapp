<table class="table table-striped table-bordered table-condensed table-hover table-responsive">
  <thead>
  <tr>
    <th>Id</th>
    <th>Reward</th>
    <th>SKU</th>
    <th>Currency Code</th>
    <th>Available</th>
    <th>Type</th>
    <th>Countries</th>
    <th>Is Variable</th>
    <th>Price</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>
  </thead>
  <tbody>
  <% rewards.each do |reward| %>
      <tr>
        <td><%= reward.id %></td>
        <td><%= reward.description %></td>
        <td><%= reward.sku %></td>
        <td><%= reward.currency_code %></td>
        <td><%= reward.available? %></td>
        <td><%= reward.type %></td>
        <td><%= truncate(reward.countries.join(", "), length: 50) %></td>
        <td><%= reward.is_variable? %></td>
        <td><%= reward.price %></td>
        <td><%= reward.created_at.to_s(:ymdhms) %></td>
        <td><%= reward.updated_at.to_s(:ymdhms) %></td>
      </tr>
  <% end %>
  </tbody>
</table>
