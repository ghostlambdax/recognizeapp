<%= content_for :title, "Help for your employee recognition program" %>
<%= content_for :description, "Get help administering and learn best practices for your employee recognition and staff rewards program using Recognize." %>
<%
   if current_user.present?
     @stream_link = link_to t("dict.stream"), stream_path(network: current_user.network)
     @profile_link = link_to t("dict.profile"), user_path(current_user)
     @send_recognition_link = link_to t("dict.send_a_recognition"), new_recognition_path(network: current_user.network)
   else
     @stream_link = t("dict.stream")
     @profile_link = t("dict.profile")
     @send_recognition_link = t("dict.send_a_recognition")
   end
%>


<section class="width-1400 margin-auto help-top marginBottom30">

  <div class="banner">
    <h1><%= t("help.title") %></h1>
  </div>

  <div class="row-fluid marginBottom30">

  <% unless iframe_viewer? %>
  <div class="span4">
    <a class="helpiFrame button button-primary marginBottom10" href="https://faq.recognizeapp.com"><%= t("help.faq") %></a>
    <p>How-to guides, step by step instructions, and feature explanations.</p>
  </div>
  <% end %>

  <div class="span4 resource-link">
    <%= link_to t('welcome.resources', default: 'Resources'), resources_path, data: {turbolinks: false}, class: 'button button-primary marginBottom10' %>
    <p>Get PDFs on how to setup Outlook or a one-page PDF to give to employees to start using Recognize.</p>
  </div>

  <div class="span4">
    <%= link_to t('help.privacy'), user_rights_path, data: {turbolinks: false}, class: 'button button-primary marginBottom10' %>
    <p>Recognize's clear, readable privacy policy.</p>
  </div>

  </div>

  <div class="row-fluid">


  <div class="span4">
    <%= link_to t('help.status'), 'https://status.recognizeapp.com', data: {turbolinks: false}, class: 'button button-primary marginBottom10' %>
    <p>Uptime of the Recognize services and upcoming deployments.</p>
  </div>

  <div class="span4">
    <%= link_to t('help.articles'), articles_path, data: {turbolinks: false}, class: 'button button-primary marginBottom10' %>
    <p>Thought leadership in all things employee engagement and recognition.</p>
  </div>

  <div class="span4">
    <%= link_to t('help.product_updates'), cms_product_updates_path, data: {turbolinks: false}, class: 'button button-primary marginBottom10' %>
    <p>Product feature updates, including peer-to-peer recognition program, nominations, rewards, mobile, and integrations.</p>
  </div>

  </div>

</section>


<section class="resources clearfix">
  <div>
    <div class="content">
      <h3><%= t("help.welcome_to_recognize") %></h3>
      <ul class="bullet-list">
        <li><%= t("help.make_sure_your_profile_html", profile: @profile_link) %></li>
        <li><%= t("help.your_profile_is_accessible_from_the_top_right") %></li>
        <li><%= t("help.view_your_companys_recognitions_from_the_stre_html", stream: @stream_link) %></li>
        <li><%= @send_recognition_link %></li>
      </ul>
      <%= render partial: "help/get_started_guide_link" %>
    </div>
    <div class="videos">
      <div class="videos">
        <iframe width="100%" height="200px" src="https://www.youtube.com/embed/<%= @youtube_id %>" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  </div>
  <div>
    <div class="content">
      <h3><%= t("help.from_yammer") %></h3>
      <ul class="bullet-list">
        <li><%= t("help.download_the_extension_to_replace_yammer_html", link: link_to(t("help.download_the_extension"), download_path)) %></li>
        <li><%= t("help.view_your_profile_from_yammer") %></li>
        <li><%= t("help.send_a_recognition_in_yammer") %></li>
      </ul>
      <a href="/get-started-employees-yammer.pdf" class="button"><%= t("help.download_user_guide") %></a>
    </div>
    <div class="videos">
      <div class="videos">
        <iframe width="100%" height="200px" src="https://www.youtube.com/embed/5s3OEiRxWNw" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  </div>
  <div>
    <div class="content">
      <h3><%= t("help.from_workplace") %></h3>
      <ul class="bullet-list">
        <li><%= t("help.workplace_guide_html") %></li>
      </ul>
      <a href="/docs/about/fb-workplace.pdf" class="button"><%= t("help.download_quick_guide") %></a>
    </div>
    <div class="videos">
      <div class="videos">
        <iframe width="100%" height="200px" src="https://www.youtube.com/embed/-SllalyG6AE" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  </div>
  <div>
    <div class="content">
      <h3><%= t("help.from_sharepoint") %></h3>
      <ul class="bullet-list">
        <li><%= t("help.all_of_recognize_is_in_sharepoint") %></li>
        <li><%= t("help.login_with_office_365") %></li>
        <li><a target="_blank" href="https://store.office.com/en-001/app.aspx?assetid=WA104379864&ui=en-US&rs=en-001&ad=US&appredirect=false"><%= t("help.add_recognize_to_your_sharepoint") %></a></li>
      </ul>
    </div>

    <div class="videos">
      <iframe width="100%" height="200px" src="https://www.youtube.com/embed/k9rel-s5xzw" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
</section>

<section class="help clearfix">
  <div class="content">
    <h2><%= t("help.let_us_help_you") %></h2>
  </div>
  <div class="actions">
    <ul>
      <% if !iframe_viewer? %><li><a class="helpiFrame" href="https://recognize.zendesk.com">FAQ</a></li><% end %>
      <li><%= link_to t("help.write_us"), contact_path %></li>
      <li><a href="tel:8662880373">(866) 288-0373</a></li>
    </ul>
  </div>
</section>

<%= render partial: 'home/footer' if current_user.blank? %>

<script type="text/javascript" charset="utf-8">
  $document.on("click", "a.helpiFrame", function() {
    parent.location="https://recognize.zendesk.com";
  });
</script>
