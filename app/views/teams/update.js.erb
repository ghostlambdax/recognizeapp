(function(){
  var $team_wrapper = $("#<%= dom_id(@team)%>");
  var $control = $team_wrapper.find(".team-name");
  var $errorElement = $('#name-error');
  <% if @team.valid? %>
    $errorElement.addClass('hidden');
    $control.html('<%= @team.name%>');
    $('#<%= dom_id(@team)+"_edit_btn"%>').show();
  <% else %>
    $errorElement.removeClass('hidden');
    <% if @team.errors[:name].any? %>
     $errorElement.html("<%= j @team.errors[:name].to_sentence %>")
    <% end %>
  <% end %>
})();
