<h1 class="marginBottom10 company-name">
<% if company_customization_secondary_logo.present? %>
  <%= image_tag company_customization_secondary_logo.large_thumb.url , alt: _("Company logo"), class: "theme-logo-large"
    %><span class="offscreen">
      <%= @company.name %>
    </span>
<% elsif @company.has_theme? && @company.custom_theme.legacy? %>
  <%= image_tag "themes/#{company_theme_id}/logo_large.png" , alt: _("Company logo") , class: "theme-logo-large" %><span
      class="offscreen">
      <%= @company.name %>
    </span>
<% else %>
  <%= t("dict.company_recognitions", name: @company.name)%>
<% end %>
</h1>
