<div id="recognize-badge-list-wrapper" class="fadeTop overlay <% if params[:badge_list_open] == 'true' %>current<%end %>">

  <% if body_classes.include?("recognitions") %>
    <%= image_tag("icons/Spinner.apng",  class: "badge-loader") %>
  <% end %>

  <a href="javascript://" class="close-icon recognition-overlay-close"><%= t("recognition_new.close") %></a>

  <div id="all-wrapper">
    <h3><%= t("recognition_new.all_badges")%></h3>
    <div id="badge-list-wrapper">
      <ul id="badge-list" class="bootstrap-toggle-check clearfix" data-badges-remaining-endpoint="<%= remaining_company_badges_path %>">

        <%= render :partial => "badges/badge", :collection => sort_badges(badge_set) %>

        <% if !current_user.company.custom_badges_enabled? %>
          <li class="badge-item">
            <%= link_to welcome_path(upgrade: true), id: "upgrade-badges-link-badge" do %>
              <%= image_tag "badges/200/new-badge-p.png", width: 130, height: 130, class: "badge-image-small"%>
              <div class="button button-small">
                <%= feather_icon('check', color: 'black', height: 15) %>
                <span>Get more badges</span>
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
  </div>

  </div>

</div>


