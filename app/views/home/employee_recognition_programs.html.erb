    <%= schedule_demo_link %>
  </div>

  <%= image_tag 'pages/employee-recognition-programs/intro.jpg', alt: 'Illustrations of people showing employee recognition' %>
</section>


<ul class="programs-list">
  <% vendors.each do |vendor| %>

