                    <li>
                      <%= hris %>
                    </li>
                  <% end %>
                </ul>
              </dd>
            </dl>
          <% end %>
          <% if vendor[:other_integrations].present? %>
            <dl>
              <dt><h3>Integrations</h3></dt>
              <dd>
                <ul class="bullet-list">
                  <% vendor[:other_integrations].split(',').each do |other_integration| %>
                    <li>
                      <%= other_integration %>
                    </li>
                  <% end %>
                </ul>
              </dd>
            </dl>
          <% end %>
          <% if vendor[:stars].present? %>
            <dl>
              <dt><h3 title="Capterra star rating">Star rating<sup>?</sup></h3></dt>
              <dd class="stars">
                <%= vendor[:stars] %>/5
