<% content_for :title, "Employee Recognition Analytics" %>
<% content_for :description, "Gain insights and reports on employee recognition and employee rewards, as well as people analytics." %>

<section id="intro">
  <div class="inner">
    <h1 class="balance-text">Employee Recognition Analytics</h1>
    <p class="tagline balance-text">Recognize provides multiple metrics to measure your company's employee recognition and employee rewards performance.</p>
    <%= schedule_demo_link %>
  </div>
  <%= render partial: "home/patterns/orange.svg" %>
</section>


<div id="points">

  <section id="top-employees">
    <div class="inner">
      <div class="row-fluid flex-centered">
        <div id="celebrate-content" class="span5">
          <h2 class="balance-text">Discover top employees in your employee recognition program</h2>
          <p class="tagline balance-text">Recognize's employee recognition reports top staff based on a <%= link_to "customizable", "/customizations" %> gamification points system and more. <em>Filter employees by both badge and group.</em></p>
        </div>
        <div class="span7">
          <%= image_tag "pages/home-analytics/table.jpg", alt: "Filter by group or recognition badge to discover top staff." %>
        </div>
      </div>
    </div>
  </section>

  <section id="value-graph">
    <div class="inner">

      <div class="row-fluid flex-centered">
        <div id="celebrate-content" class="span5">
          <h2 class="balance-text">Back up initiatives with employee recognition analytics</h2>
          <p class="tagline balance-text">Attached to every employee recognition is a badge. The badge can be used to symbolize a company value and can be tracked over time. Enterprise customers can request further analytics and reports based on their special needs.</p>
        </div>
        <div class="span7">
          <%= image_tag "pages/home-analytics/graph.jpg", alt: "Badge graph shows which badges are sent each week." %>
        </div>
      </div>
    </div>
  </section>

  <section id="pie">
    <div class="inner">
      <div class="row-fluid flex-centered">
        <div id="celebrate-content" class="span6">
          <h2 class="balance-text">People analytics in company values and qualitative attributes</h2>
          <p class="tagline balance-text">In the company admin you can view the badge pie chart. It indicates overall percentage weights of your company values. View all employee recognitions associated with specific badges.</p>
        </div>

        <div class="span6">
          <%= image_tag "pages/home-analytics/pie.jpg", alt: "Pie chart of employee recogniton badges" %>
        </div>
      </div>
    </div>
  </section>

<section id="res">
  <div class="inner">
    <div class="centered">
      <h2 class="balance-text">Know your company's employee recognition engagement</h2>
    </div>
    <div class="row-fluid flex-centered">
      <div class="span6">
        <%= image_tag "pages/home-analytics/res.png", alt: "The Employee Recognition Engagement Score (RES). 50% engagement for example" %>
      </div>

      <div id="celebrate-content" class="span6">
        <p class="tagline balance-text"><%= t("dict.res_definition") %></p>
      </div>
    </div>
  </div>
</section>

  <section id="export">
    <div class="inner centered">
      <h2 class="balance-text">Export employee recognition data</h2>
      <p class="tagline balance-text">Export employee recognition data into CSV, Excel, or JSON formats in any date range. Use the data to discover top employees and analyze for predictive analytics.</p>
      <%= image_tag "pages/home-analytics/export.png", alt: "Export employee recognition data." %>
    </div>
  </section>

</div>


<%= render :partial => 'footer' %>
