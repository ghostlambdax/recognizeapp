<h3>Point values</h3>
<%= form_for @company, html: {id: "point-values"}, url: update_point_values_company_path(network: @company.domain), remote: true do |f|%>
  <%
    redeemable_tooltip_title = "When turned on, points earned from this activity will be able to be redeemed in the rewards catalog"
    redeemable_label_str = "#{t('dict.redeemable')}<sup>?</sup>".html_safe
  %>
  <div class="row-fluid">
    <div class="span4 marginBottom20">
      <%= f.label "Sending a recognition" %>
      <%= f.number_field :sent_recognition_value %>
      <%= f.fields_for :settings, @company.settings do |s| %>
        <label rel="tooltip" title="<%= redeemable_tooltip_title %>">
          <%= s.check_box :sent_recognition_redeemable %>
          <%= redeemable_label_str %>
        </label>
      <% end %>
    </div>

    <div class="span3 marginBottom20">
      <%= f.label "Receiving a like" %>
      <%= f.number_field :received_approval_value %>
      <%= f.fields_for :settings, @company.settings do |s| %>
        <label rel="tooltip" title="<%= redeemable_tooltip_title %>">
          <%= s.check_box :received_approval_redeemable %>
          <%= redeemable_label_str %>
        </label>
      <% end %>
    </div>

    <div class="span3 marginBottom20">
      <%= f.label "Sending a like" %>
      <%= f.number_field :sent_approval_value %>
      <%= f.fields_for :settings, @company.settings do |s| %>
        <label rel="tooltip" title="<%= redeemable_tooltip_title %>">
          <%= s.check_box :sent_approval_redeemable %>
          <%= redeemable_label_str %>
        </label>
      <% end %>
    </div>
  </div>
  <br/>
  <%= f.submit "Save point settings", class: "button button-border" %>

<% end %>
